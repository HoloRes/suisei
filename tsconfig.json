{
	"compilerOptions": {
		"outDir": "./dist",
		"typeRoots": [
			"./src/lib/types",
			"./node_modules/@types"
		],
		"resolveJsonModule": true,
		"plugins": [
			{ "transform": "typia/lib/transform" },
			{ "transform": "typescript-transform-paths" }
		],
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"strict": true,
		"strictNullChecks": true,
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": [
		"./src/**/*"
	],
	"extends": "@tsconfig/node18/tsconfig.json"
}

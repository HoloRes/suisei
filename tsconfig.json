{
	"compilerOptions": {
		"outDir": "./dist",
		"typeRoots": [
			"./src/lib/types",
			"./node_modules/@types"
		],
		"resolveJsonModule": true,
		"plugins": [
			{
				"transform": "typia/lib/transform"
			}
		],
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"strict": true,
		"strictNullChecks": true,
	},
	"include": [
		"./src/**/*"
	],
	"extends": "@tsconfig/node18/tsconfig.json"
}

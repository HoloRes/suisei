datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Server {
  id               String   @id
  prefix           String?
  disabledCommands String[]
  updateChannel    String?
  staffRole        String?
  adminRole        String?
}

model YoutubeChannel {
  id            String         @id
  name          String
  englishName   String?
  photo         String?
  org           String?
  subOrg        String?
  subscriptions Subscription[]
}

model Subscription {
  // Discord channel id
  id        String
  message   String
  // YouTube channel id
  channelId String
  channel   YoutubeChannel @relation(fields: [channelId], references: [id])

  @@id([id, channelId])
}

model QuerySubscription {
  id              String   @id
  message         String
  includedOrgs    String[]
  excludedOrgs    String[]
  includedSubOrgs String[]
  excludedSubOrgs String[]
  includedVtubers String[]
  excludedVtubers String[]
}

model Livestream {
  id         String   @id
  title      String
  messageIds String[]
}
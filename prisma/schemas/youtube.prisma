generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "cockroachdb"
    url      = env("DATABASE_URL")
}

model YoutubeChannel {
    id          String  @id
    name        String
    englishName String?
    photo       String?
    org         String?
    subOrg      String?

    subscriptions Subscription[]
}

model Subscription {
    // Discord channel id
    id      String
    message String

    // YouTube channel id
    channelId String
    channel   YoutubeChannel @relation(fields: [channelId], references: [id])

    @@id([id, channelId])
}

model Livestream {
    id    String @id
    title String

    messageIds String[]
}
